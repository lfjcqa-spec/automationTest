{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "types": ["node", "@playwright/test"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "rootDir": "."
  },
  "include": [
    "e2e-old",
    "e2e-new",
    "playwright.new.config.ts"
  ],
  "exclude": [
    "node_modules",
    "**/playwright-report/**",
    "**/test-results/**"
  ]
}