{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@fixtures/*": ["tests/dataprovider/fixtures/*"],
      "@providers/*": ["tests/dataprovider/providers/*"],
      "@suites/*": ["tests/dataprovider/suites/*"],
      "@pages/*": ["tests/pages/*"],
      "@steps/*": ["tests/steps/*"],
      "@utils/*": ["tests/utils/*"]
    }
  },
  "include": ["tests", "playwright.config.ts"]
}