{
  "name": "playwright-test",
  "version": "1.0.0",
  "description": "Root project for managing Playwright E2E tests",
  "scripts": {
    "e2e": "cross-env NODE_CONFIG_DIR=./e2e-auto/conf playwright test --config=e2e-auto/playwright.config.ts",
    "install-all": "npm install && cd e2e-auto && npm install",
    "lint": "eslint .",
    "build": "tsc -b e2e-auto"
  },
  "devDependencies": {
    "@playwright/test": "^1.46.1",
    "@types/config": "^3.3.5",
    "@types/mssql": "^9.1.7",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "typescript": "^5.5.4"
  },
  "workspaces": [
    "e2e-auto"
  ],
  "dependencies": {
    "config": "^4.1.1",
    "mssql": "^11.0.1"
  }
}
